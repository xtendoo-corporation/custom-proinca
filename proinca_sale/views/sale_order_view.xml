<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">Sale Slide Channel</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_formation"/>
                <field name="course_partner_formation_id" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="manager_id" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="tutor_id" domain="[('is_tutor', '=', True)]"  attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="url"  attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="start_date" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="end_date" attrs="{'invisible': [('is_formation', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="slide_channel_id"  attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="modality" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="price_hours" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="questionnaire_number" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="curso_n_group" attrs="{'invisible': [('is_formation', '=', False)]}"/>
                <field name="curso_learning_action" attrs="{'invisible': [('is_formation', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook/page[@name='order_lines']" position="after">
                <page string="Hitos" name="milestones" attrs="{'invisible': [('is_formation', '=', False)]}">
                    <field name="milestone_ids" widget="one2many">
                        <tree string="Hitos" editable="bottom">
                            <field name="date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <field name="partner_invoice_id" position="attributes">
                <attribute name="attrs">{'invisible': [('is_formation', '=', False)]}</attribute>
            </field>
            <field name="partner_shipping_id" position="attributes">
                <attribute name="attrs">{'invisible': [('is_formation', '=', False)]}</attribute>
            </field>
            <field name="sale_order_template_id" position="attributes">
                <attribute name="attrs">{'invisible': [('is_formation', '=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>


