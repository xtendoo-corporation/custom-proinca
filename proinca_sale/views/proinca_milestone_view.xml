<odoo>

    <record id="proinca_milestone_form" model="ir.ui.view">
        <field name="name">proinca.milestone.form</field>
        <field name="model">proinca.milestone</field>
        <field name="arch" type="xml">
            <form string="Milestone">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="numbers"/>
                        <field name="days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_proinca_milestone" model="ir.actions.act_window">
        <field name="name">Hitos</field>
        <field name="res_model">proinca.milestone</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="proinca_milestone_menu"
              name="Hitos"
              parent="proinca_base.proinca_menu"
              sequence="60"
              action="action_proinca_milestone"/>

</odoo>





