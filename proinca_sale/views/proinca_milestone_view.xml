<odoo>
    <data>
        <record id="model_milestone" model="ir.model">
            <field name="name">Milestone</field>
            <field name="model">sale.order.milestone</field>
            <tree string="Milestones">
                <field name="name"/>
            </tree>
            <form string="Milestone Form">
                <header>
                    <button name="save" string="Save" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="numbers"/>
                        <field name="days"/>
                        <field name="date_field"/>
                    </group>
                </sheet>
            </form>
        </record>
    </data>
</odoo>

