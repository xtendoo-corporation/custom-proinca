<odoo>
    <data>

        <record id="view_sales_order_filter" model="ir.ui.view">
            <field name="name">sale.order.list.select</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <filter name="my_sale_orders_filter" position="after">
                    <filter
                        name="is_formation"
                        string="Formación"
                        domain="[('is_formation','=',True)]"
                        help="Ventas de formación"
                    />
                </filter>
            </field>
        </record>

        <record id="view_sale_order_form_custom" model="ir.ui.view">
            <field name="name">sale.order.form.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='name']"
                       position="after">
                    <field name="student_id" optional="show"
                           attrs="{'column_invisible': [('parent.is_formation', '=', False)]}"/>
                </xpath>
                <!--                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']"-->
                <!--                       position="attributes">-->
                <!--                    <attribute name="string">€/Horas</attribute>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom_qty']"-->
                <!--                       position="attributes">-->
                <!--                    <attribute name="string">Horas</attribute>-->
                <!--                </xpath>-->
            </field>
        </record>

        <record id="view_proinca_seguimiento_tree" model="ir.ui.view">
            <field name="name">informes.seguimiento.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree create="false" editable="top">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="slide_channel_id"/>
                    <field name="student_id"/>
                    <field name="mail"/>
                    <field name="phone"/>
                    <field name="manager_id"/>
                    <field name="customer_id"/>
                    <field name="questionnaire_number_done"/>
                    <field name="questionnaire_percentage_completed"/>
                    <field name="hours"/>
                    <field name="conexion_percentage"/>
                    <field name="milestone_ids" widget="many2many_tags"/>
                    <field name="milestone_dates"/>
                    <field name="student_status"/>
                    <button name="action_diploma_sent" type="object" string="Send by Email"/>
                </tree>
            </field>
        </record>

        <record id="paperformat_diploma" model="report.paperformat">
            <field name="name">Diploma</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>

        <record id="action_print_diplomas" model="ir.actions.report">
            <field name="name">Imprimir diplomas</field>
            <field name="model">sale.order.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">proinca_sale.report_diploma_alumno</field>
            <field name="report_file">proinca_sale.report_diploma_alumno</field>
            <field name="print_report_name">'Diploma - %s' % (object.order_id.name)</field>
            <field name="attachment">'diploma.pdf'</field>
            <field name="binding_model_id" ref="model_sale_order_line"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_diploma"/>
        </record>

        <record id="action_proinca_tracking" model="ir.actions.act_window">
            <field name="name">Seguimiento</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="proinca_menu_tracking"
                  name="Seguimiento"
                  parent="proinca_base.proinca_menu"
                  sequence="50"
                  action="action_proinca_tracking"/>

    </data>
</odoo>
