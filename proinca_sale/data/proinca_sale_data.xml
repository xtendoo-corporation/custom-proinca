<?xml version="1.0" ?>
<odoo>
    <!-- Mail template are declared in a NOUPDATE block
        so users can freely customize/delete them -->
    <data noupdate="0">
        <!--Email template -->
        <record id="email_template_diploma_alumno" model="mail.template">
            <field name="name">Diploma alumno</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="subject">{{object.company_id.name}} Diploma (Ref {{object.slide_channel_id.name or 'n/a'}})
            </field>
            <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or
                user.email_formatted) }}
            </field>
            <field name="partner_to">{{ object.student_id.id }}</field>
            <field name="lang">{{ object.student_id.lang }}</field>
            <field name="description">Diploma para el alumno</field>
            <field name="body_html" type="html">
                <div id="header">
                    <div id="header_fig" style="width:100%;">
                    </div>
                </div>
                <div
                    id="content"
                    style="clear:both;width:80%;margin:10px auto;font-size:1.5em;color:black;"
                >
                    <p>Hola {{object.student_id.name}},</p>
                    <p>Enviamos el diploma del curso v√≠a mail</p>
                    <p>Saludos</p>
                </div>
                <div id="footer">
                </div>
            </field>
<!--            <field name="report_template" ref="proinca_sale.report_diploma"/>-->
<!--            <field name="report_name">Diploma</field>-->
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
