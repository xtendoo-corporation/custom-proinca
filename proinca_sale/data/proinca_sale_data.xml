<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_diploma_alumno" model="mail.template">
            <field name="name">Diploma Envio</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or
                user.email_formatted) }}</field>
            <field name="partner_to">{{ object.student_id.id }}</field>
            <field name="subject">{{object.company_id.name}} Diploma (Ref {{object.slide_channel_id.name or 'n/a'}})</field>
<!--            <field name="report_template" ref="proinca_sale.report_diploma"/>-->
<!--            <field name="report_name">Diploma</field>-->
<!--            <field name="report_template" ref="account_invoices"/>-->
            <field name="lang">{{ object.student_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255);">
                    <p>Hola {{object.student_id}},</p>
                    <p>Enviamos el diploma del curso v√≠a mail</p>
                    <p>Saludos</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
