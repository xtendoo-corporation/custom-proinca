<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>

        <record id="account_learning_form_inherit" model="ir.ui.view">
            <field name="name">account.learning.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Formacion">
                        <group>
                            <field name="learning_action"/>
                            <field name="n_learning_action"/>
                            <field name="n_group_learning_action"/>
                            <field name="date_begin_learning_action"/>
                            <field name="date_stop_learning_action"/>
                            <field name="modality_learning_action"/>
                            <field name="partner_learning_action"/>
                            <field name="n_time"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
