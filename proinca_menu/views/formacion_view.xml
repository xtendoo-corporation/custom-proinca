<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_formacion_pedido_tree" model="ir.ui.view">
            <field name="name">formacion.pedido.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_formacion_curso_tree" model="ir.ui.view">
            <field name="name">formacion.curso.tree</field>
            <field name="model">slide.channel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="curso"/>
                    <field name="url"/>
                    <field name="hours"/>
                    <field name="n_cuestionario"/>
                    <field name="p_hora"/>
                    <field name="modalidad"/>
                </tree>
            </field>
        </record>

        <record id="view_formacion_alumno_tree" model="ir.ui.view">
            <field name="name">formacion.alumno.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="email"/>
                    <field name="telefono"/>
                </tree>
            </field>
        </record>

        <record id="view_formacion_tutor_tree" model="ir.ui.view">
            <field name="name">formacion.tutor.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="tutor_id" domain="[('is_tutor', '=', True)]"/>
                </tree>
            </field>
        </record>


        <record id="action_formacion_cursos" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">slide.channel</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_formacion_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_formacion_pedidos" model="ir.actions.act_window">
            <field name="name">Pedidos</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_formacion_tutores" model="ir.actions.act_window">
            <field name="name">Tutores</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_formacion" name="FormaciÃ³n" sequence="20" web_icon="proinca_menu,static/img/icon.png"/>

        <menuitem id="menu_formacion_pedidos" name="Pedidos" parent="menu_formacion" sequence="10"
                  action="action_formacion_pedidos"/>

        <menuitem id="menu_formacion_cursos" name="Cursos" parent="menu_formacion" sequence="20"
                  action="action_formacion_cursos"/>

        <menuitem id="menu_formacion_alumnos" name="Alumnos" parent="menu_formacion" sequence="30"
                  action="action_formacion_alumnos"/>

        <menuitem id="menu_formacion_tutores" name="Tutores" parent="menu_formacion" sequence="40"
                  action="action_formacion_tutores"/>

    </data>

</odoo>
