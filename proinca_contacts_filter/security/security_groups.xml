<odoo>
    <data>

         <record model="ir.module.category" id="contacts_category">
            <field name="name">Contactos</field>
            <field name="description">Contactos</field>
            <field name="sequence">60</field>
        </record>

        <record id="group_contacts_admin" model="res.groups">
            <field name="name">Administradores</field>
            <field name="category_id" ref="contacts_category"/>
        </record>

        <record id="group_contacts_comercial" model="res.groups">
            <field name="name">Comerciales</field>
            <field name="category_id" ref="contacts_category"/>
        </record>

        <record id="all_contacts_filter" model="ir.rule">
            <field name="name">Todos los contactos</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ("type", "!=", "private"), ("type", "=", False)]</field>
            <field name="groups" eval="[(4, ref('proinca_contacts_filter.group_contacts_admin'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record id="own_contacts_filter" model="ir.rule">
            <field name="name">Todos los contactos</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|',('user_id', '=',user.id),('user_id', '=', False), '|', ("type", "!=", "private"), ("type", "=", False)]</field>
            <field name="groups" eval="[(4, ref('proinca_contacts_filter.group_contacts_comercial'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>

    </data>
</odoo>
