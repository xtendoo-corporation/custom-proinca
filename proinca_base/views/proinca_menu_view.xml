<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_proinca_curso_tree" model="ir.ui.view">
            <field name="name">formacion.curso.tree</field>
            <field name="model">slide.channel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="hours"/>
                    <field name="questionnaire_number"/>
                    <field name="price_hours"/>
                    <field name="modality"/>
                </tree>
            </field>
        </record>

        <record id="action_proinca_channel" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">slide.channel</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_proinca_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_is_alumno' : 1, 'default_is_alumno' : True,}</field>
        </record>

        <record id="action_proinca_sale_order" model="ir.actions.act_window">
            <field name="name">Pedidos</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="res_partner_view_search" model="ir.ui.view">
            <field name="name">res.partner.search.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="before">
                   <filter string="Tutores" name="is_tutor" domain="[('is_tutor','=', 1)]"/>
                </xpath>
            </field>
        </record>

        <record id="res_partner_view_search_alumno" model="ir.ui.view">
            <field name="name">res.partner.search.inherit.alumno</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="before">
                   <filter string="Alumnos" name="is_alumno" domain="[('is_alumno','=', 1)]"/>
                </xpath>
            </field>
        </record>

        <record id="action_proinca_res_partner" model="ir.actions.act_window">
            <field name="name">Tutores</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_is_tutor' : 1, 'default_is_tutor' : True,}</field>
        </record>

        <menuitem id="proinca_menu"
                  name="FormaciÃ³n"
                  sequence="20"
                  web_icon="proinca_menu,static/img/icon.png"/>

        <menuitem id="proinca_menu_sale_order"
                  name="Pedidos"
                  parent="proinca_menu"
                  sequence="10"
                  action="action_proinca_sale_order"/>

        <menuitem id="proinca_menu_channel"
                  name="Cursos"
                  parent="proinca_menu"
                  sequence="20"
                  action="action_proinca_channel"/>

        <menuitem id="proinca_menu_alumnos"
                  name="Alumnos"
                  parent="proinca_menu"
                  sequence="30"
                  action="action_proinca_alumnos"/>

        <menuitem id="proinca_menu_tutores"
                  name="Tutores"
                  parent="proinca_menu"
                  sequence="40"
                  action="action_proinca_res_partner"/>

    </data>

</odoo>
