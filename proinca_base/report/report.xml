        <!--    string="Diploma"-->
        <!--    report_type="qweb-pdf"-->
        <!--    name="proinca_training.report_diploma_alumno"-->
        <!--    file="proinca_training.report_diploma"-->
        <!--    />-->

        <record id="report_diploma" model="ir.actions.report">
            <field name="name">Diploma</field>
            <field name="model">sale.order.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">proinca_base.diploma_report_view</field>
            <field name="report_file">proinca_base.diploma_report_view</field>
            <field name="print_report_name">'Diploma - %s' % (object.order_id.name)</field>
            <field name="attachment">'diploma.pdf'</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_diploma"/>
        </record>


        <report id="report_curso"
                model="proinca.curso"
                string="Curso"
                report_type="qweb-pdf"
                name="proinca_training.report_curso_print"
                file="proinca_training.report_curso"
        />

    </data>
</odoo>


